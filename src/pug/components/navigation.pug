mixin nav-item(menuItem, type='')
	li(class=`nav__item ${type}`)
		a(class="nav__item-link text-uppercase", href=menuItem.link)= menuItem.title
		if(menuItem.dropdown)
			i(class="fa fa-angle-down nav__item-icon")
			ul.dropdown
				div.row
					if(menuItem.title=="Sản phẩm")
						div.col-lg-6.col-12.dropdown__list
							- for(var i=0; i<=3; i++)
								li.dropdown__item dropdown-item 1
						div.col-lg-6.col-12.dropdown__image
							img(src="./assets/images/new-4.png" alt=',')
					else
						div.col-12.dropdown__list
							- for(var i=0; i<=8; i++)
								li.dropdown__item dropdown-item

div.header__nav
	nav.nav.position__relative
		input(type='checkbox' id='toggle__nav')
		div#collapse1
			ul.toggle__nav-list
				each menuItem in menu
					+nav-item(menuItem, 'nav__respond-item')
				button.button.button__close
					label(for='toggle__nav')
			label.close__nav(for='toggle__nav')
		div.container
			ul.nav__list
				each menuItem in menu
					li(class=`nav__item nav-item-respond`)
						a(class="nav__item-link text-uppercase", href=menuItem.link)= menuItem.title
						if(menuItem.dropdown)
							i(class="fa fa-angle-down nav__item-icon")
							ul.dropdown
								div.row
									if(menuItem.title=="Sản phẩm")
										div.col-lg-6.col-12.dropdown__list
											- for(var i=0; i<=3; i++)
												li.dropdown__item dropdown-item 1
										div.col-lg-6.col-12.dropdown__image
											img(src="./assets/images/new-4.png" alt=',')
									else
										div.col-12.dropdown__list
											- for(var i=0; i<=8; i++)
												li.dropdown__item dropdown-item

			ul.nav__respond
				div.row
					div.col-sm-1.col-2.d-flex
						button.button
							label(for='toggle__nav')
								i(class="fas fa-bars icon-hamburger")
					div.col-sm-8.col-10.offset-sm-3
						div.header__search.header__search-respond
							div.header__search-form
								form(action='#')
									input.header__search-input(type='text' placeholder='Tìm kiếm...')
									button.button.header__search-button
										i(class='fas fa-search')
							div.header__cart.header__cart-respond
								button.button 
									a(href="cart.html")
										i(class="fas fa-shopping-cart")
										span.header__cart-count 0 
											span Sản phẩm

